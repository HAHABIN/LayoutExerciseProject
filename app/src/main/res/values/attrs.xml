<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--name 自定义View的名字 TextView-->
    <declare-styleable name="TextView">
        <!-- name 属性名字 不能与系统已经有得命名冲突
        format 格式 string 文字 color 颜色
                    dimension 宽高 字体大小  integer 数字
                    reference 资源（drawable..)
        -->
        <attr name="DemoText" format="string"/>
        <attr name="DemoTextColor" format="color"/>
        <attr name="DemoTextSize" format="dimension"/>
        <attr name="DemoMaxLength" format="integer"/>
        <!--可以不需要  background 自定义View都是继承view ,背景似乎由view管理-->
<!--        <attr name="DemoBackground" format="reference|color"/>-->
        <!-- 枚举-->
        <attr name="DemoInputType">
            <enum name="number" value="1"/>
            <enum name="text" value="2"/>
            <enum name="password" value="3"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="StepView">
        <!--显示数字大小-->
        <attr name="StepTextSize" format="dimension"/>
        <!--数字颜色-->
        <attr name="StepTextColor" format="color"/>
        <!--内颜色-->
        <attr name="InnerColor" format="color"/>
        <!--外颜色-->
        <attr name="OuterColor" format="color"/>
        <!--画笔宽度-->
        <attr name="StrokeWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ColorTrackTextView">
        <!--初始颜色-->
        <attr name="DynamicTextColor" format="color"/>
        <!--改变颜色 高亮颜色-->
        <attr name="ChangeTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="RatingStarsView">
        <attr name="normalStar" format="reference"/>
        <attr name="selectedStar" format="reference"/>
        <attr name="starCount" format="integer"/>
    </declare-styleable>
</resources>