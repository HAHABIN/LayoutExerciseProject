<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_time_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="下单时间："
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="10.29 18:01:03"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_recyclable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/shape_settvcolor"
            android:gravity="center"
            android:text="可回收"
            android:textColor="#F15265"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/white_eb" />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/iv_address"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:layout_margin="10dp"
          android:padding="10dp"
          android:src="@drawable/ic_address" />

      <TextView
          android:id="@+id/tv_address"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_toRightOf="@+id/iv_address"
          android:text="XX学校教学楼一座202"
          android:textColor="@color/gray_333"
          android:textSize="16sp" />

      <TextView
          android:id="@+id/tv_info"
          android:layout_toRightOf="@+id/iv_address"
          android:layout_below="@+id/tv_address"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="周杰伦 1365898125"
          android:textColor="@color/gray"
          android:layout_marginVertical="10dp"
          android:textSize="16sp"/>

      <Button
          android:id="@+id/btn_call"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_width="100dp"
          android:layout_height="40dp"
          android:background="@drawable/shape_gray_oval"
          android:drawableLeft="@drawable/ic_phone"
          android:text="拨打电话"
          android:padding="10dp"
          android:layout_margin="10dp"
          android:textSize="12sp"
          android:textColor="@color/gray"
          />
  </RelativeLayout>
    <TextView
        android:id="@+id/iv_cutlery_num"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="餐具：餐碗*1 餐碗*1"
        android:background="@color/white_fa"
        android:gravity="center|left"
        android:paddingHorizontal="10dp"
        android:layout_marginHorizontal="10dp"
        />
    <TextView
        android:id="@+id/tv_order_number"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:text="订单号：26586958686525262536"
        android:layout_margin="10dp"
        android:textColor="@color/gray"
        />
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="确认回收"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/shape_yellow_oval"
        android:layout_margin="10dp"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/ll_tail_end"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:visibility="visible">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/white_eb" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">
            <View
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="@color/gray"
                android:layout_toLeftOf="@+id/tv_tail_end"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/tv_tail_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="于10.29 18:01:03完成回收"
                android:textColor="@color/gray"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textSize="14sp"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/white_eb" />
</LinearLayout>