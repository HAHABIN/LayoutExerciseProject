<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f5"
    android:orientation="vertical"
    tools:context=".cutleryRecycling.ToBeRecyledFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_fa"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_first_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最先配送"
                android:textColor="@color/yellow_F3992C" />
            <ImageView
                android:id="@+id/iv_first_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:src="@drawable/area_state_pressed"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/white_eb" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_recycling_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回收区域"
                android:textColor="@color/gray" />
            <ImageView
                android:id="@+id/iv_recycling_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/area_state_enabled"
                android:layout_marginLeft="5dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white_eb" />

    <com.example.habin.shopcar.cutleryRecycling.SwipeView
        android:id="@+id/swipeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>