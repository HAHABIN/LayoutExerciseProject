<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f5"
    android:orientation="vertical"
    tools:context=".viewdemo.SelectViewActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_f5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="功能选择"
            android:textColor="@color/black_26"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/tv_shop_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/bg_shape_386ffe"
                android:padding="10dp"
                android:text="自定义图1"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/tv_cutlery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/tv_shop_car"
                android:background="@drawable/bg_shape_386ffe"
                android:padding="10dp"
                android:text="自定义图2"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/tv_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/tv_cutlery"
                android:background="@drawable/bg_shape_386ffe"
                android:padding="10dp"
                android:text="自定义图3"
                android:textColor="@color/white" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_f5"
            android:layout_marginHorizontal="10dp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/tv_test1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/bg_shape_386ffe"
                android:padding="10dp"
                android:text="自定义图4"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/tv_test2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/tv_shop_car"
                android:background="@drawable/bg_shape_386ffe"
                android:padding="10dp"
                android:text="自定义图5"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/tv_test3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/tv_cutlery"
                android:background="@drawable/bg_shape_386ffe"
                android:padding="10dp"
                android:text="自定义图6"
                android:textColor="@color/white" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_f5"
            android:layout_marginHorizontal="10dp"/>
    </LinearLayout>
</LinearLayout>